#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
	if [ -d /run/systemd/system ] && [ -e /lib/systemd/system/brickd.service ]; then
		systemctl enable brickd.service
		systemctl start brickd.service
	elif [ -x /etc/init.d/brickd ]; then
		update-rc.d brickd defaults > /dev/null

		if [ -x /usr/sbin/invoke-rc.d ]; then
			invoke-rc.d brickd start
		else
			/etc/init.d/brickd start
		fi
	fi

	if [ -d /run/systemd/system ] && [ -e /lib/systemd/system/brickd-resume.service ]; then
		systemctl enable brickd-resume.service
	fi
fi

exit 0
